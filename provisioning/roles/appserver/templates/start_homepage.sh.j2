#!/bin/sh
# vim: ft=jinja

BASEDIR=/var/www/vhosts/homepage

. /var/www/venvs/homepage/bin/activate

if [ -f $PIDFILE ]; then
    rm $PIDFILE
fi

cd $BASEDIR
exec gunicorn \
    -u www-data \
    --pid=$BASEDIR/gunicorn.pid \
    --log-file=$BASEDIR/gunicorn.log \
    --bind=127.0.0.1:10023 \
    --workers=2 \
    homepage.wsgi:application
