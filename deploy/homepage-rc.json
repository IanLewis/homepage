{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"homepage",
      "labels":{
         "name":"homepage",
         "version": "0.0.16"
      }
   },
   "spec":{
      "replicas": 3,
      "selector":{
         "name":"homepage",
         "version": "0.0.16"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"homepage",
               "version": "0.0.16"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"homepage",
                  "image":"",
                  "env" {
                    "DEBUG": "False",
                    "DB_HOST": "mysql",
                    "MEDIA_ROOT": "/var/www/media",
                    "USE_MEMCACHED": "False",
                    "MEMCACHED_HOSTS": "memcached:11211",
                    "ENV_DIR": "/etc/secrets"
                  },
                  "ports":[
                     {
                        "containerPort":80,
                        "protocol":"TCP"
                     }
                  ],
                  "volumeMounts": [
                     {
                        "name": "secret-volume",
                        "mountPath": "/etc/secrets"
                     }
                  ]
               }
            ],
            "volumes": [
               {
                  "name": "secret-volume",
                  "secret": {
                     "secretName": "homepage-secret"
                  }
               }
            ]
         }
      }
   }
}
